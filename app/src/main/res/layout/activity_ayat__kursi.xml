<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayat_Kursi"
    android:orientation="vertical"
    android:background="#41BFD400">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="7dp">

        <TextView
            android:id="@+id/tv_ayatkursi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayat Kursi "
            android:textColor="#484B48"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mydashboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ayatkursi"
            android:layout_marginTop="8dp"
            android:text="Yuk Menghafal Ayat Kursi"
            android:textColor="#0E6411"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_a" />

    </RelativeLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/play"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_x="134dp"
            android:layout_y="18dp"
            android:src="@drawable/play"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/pause"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_x="134dp"
            android:layout_y="18dp"
            android:src="@drawable/pause"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/stop"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_x="134dp"
            android:layout_y="18dp"
            android:src="@drawable/stop"
            android:scaleType="fitXY"/>
    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/vie_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_ayatkursi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:justificationMode="inter_word"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>