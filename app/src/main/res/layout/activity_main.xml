<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/dashbord">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/mydashboard"
                android:layout_marginTop="25dp"
                android:text="My Dashboard"
                android:layout_marginStart="30dp"
                android:textSize="26sp"
                android:textColor="#484B48"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mydashboard2"
                android:text="Doa Harian"
                android:layout_marginTop="60dp"
                android:textSize="28sp"
                android:layout_marginStart="30dp"
                android:textColor="#0E6411"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/splash"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:rowCount="1">

            //CardView1

            <androidx.cardview.widget.CardView
                android:id="@+id/Tentang_Doa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="22sp">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_tentang_doa" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Tentang Doa"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Doa_Harian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="22sp">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_doa_harian" />

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Doa Harian"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            //CardView2

            <androidx.cardview.widget.CardView
                android:id="@+id/Wawasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="22sp">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_tambah_wawasan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Wawasan"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Game_Quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="22sp">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_game" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Game Quiz"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            //CardView3

            <androidx.cardview.widget.CardView
                android:id="@+id/Info_Aplikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="22sp">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_info_apl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Info Aplikasi"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_margin="10dp"
                android:onClick="clickExit"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="22sp">

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_exit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Keluar"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>
    </ScrollView>

    </LinearLayout>

